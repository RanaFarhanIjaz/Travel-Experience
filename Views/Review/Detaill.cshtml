@model Review
@{
    ViewData["Title"] = "Review Details";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="col-md-4">
                    <img src="@Model.ImagePath" class="img-fluid rounded" alt="@Model.PlaceName">
                </div>
            }
            <div class="@(string.IsNullOrEmpty(Model.ImagePath) ? "col-12" : "col-md-8")">
                <h2>@Model.PlaceName</h2>
                <div class="mb-3">
                    <span class="badge bg-primary">@Model.PlaceType</span>
                    <span class="text-muted ms-2">@Model.Location</span>
                </div>
                <div class="mb-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="text-warning fs-4">@(i <= Model.Rating ? "★" : "☆")</span>
                    }
                    <span class="ms-2">@Model.Rating/5 Stars</span>
                </div>
                <h4>@Model.Title</h4>
                <p class="lead">@Model.Description</p>
                <div class="text-muted">
                    <small>Reviewed by @Model.Author on @Model.CreatedDate.ToString("MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Search", "Home")" class="btn btn-secondary">Back to Search</a>
    @if (Context.Session.GetString("UserEmail") == Model.Author)
    {
        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-primary ms-2">My Dashboard</a>
    }
</div>
@model List<Review>
@{
    ViewData["Title"] = "Search Travel Reviews";
}

<div class="row">
    <div class="col-12">
        <h2 class="mb-4">Search Travel Reviews</h2>
        
        <!-- Search Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="@Url.Action("Search", "Home")" class="row g-3">
                    <div class="col-md-4">
                        <label for="place" class="form-label">Search Places</label>
                        <input type="text" 
                               name="place" 
                               class="form-control" 
                               placeholder="Search by place name, location, or description..."
                               value="@ViewBag.SearchPlace">
                    </div>
                    
                    <div class="col-md-3">
                        <label for="placeType" class="form-label">Place Type</label>
                        <select name="placeType" class="form-control">
                            <option value="All">All Types</option>
                            <option value="Hotel" selected="@(ViewBag.SelectedType == "Hotel" ? "selected" : null)">Hotel</option>
                            <option value="Restaurant" selected="@(ViewBag.SelectedType == "Restaurant" ? "selected" : null)">Restaurant</option>
                            <option value="VisitingPlace" selected="@(ViewBag.SelectedType == "VisitingPlace" ? "selected" : null)">Visiting Place</option>
                        </select>
                    </div>
                    
                    <div class="col-md-3">
                        <label for="minRating" class="form-label">Minimum Rating</label>
                        <select name="minRating" class="form-control">
                            <option value="0">Any Rating</option>
                            <option value="5" selected="@(ViewBag.SelectedRating == 5 ? "selected" : null)">5 Stars</option>
                            <option value="4" selected="@(ViewBag.SelectedRating == 4 ? "selected" : null)">4+ Stars</option>
                            <option value="3" selected="@(ViewBag.SelectedRating == 3 ? "selected" : null)">3+ Stars</option>
                            <option value="2" selected="@(ViewBag.SelectedRating == 2 ? "selected" : null)">2+ Stars</option>
                            <option value="1" selected="@(ViewBag.SelectedRating == 1 ? "selected" : null)">1+ Star</option>
                        </select>
                    </div>
                    
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Search
                        </button>
                    </div>
                </form>
                
                <!-- Clear Filters -->
                @if (!string.IsNullOrEmpty(ViewBag.SearchPlace) || !string.IsNullOrEmpty(ViewBag.SelectedType) || ViewBag.SelectedRating != null)
                {
                    <div class="mt-3">
                        <a href="@Url.Action("Search", "Home")" class="btn btn-outline-secondary btn-sm">
                            Clear Filters
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Search Results -->
        <div class="row">
            <div class="col-12">
                <h4 class="mb-3">
                    @if (Model.Any())
                    {
                        <span>Found @Model.Count review(s)</span>
                    }
                    else
                    {
                        <span>No reviews found</span>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.SearchPlace))
                    {
                        <span class="text-muted"> for "@ViewBag.SearchPlace"</span>
                    }
                </h4>

                @if (Model.Any())
                {
                    <div class="row">
                        @foreach (var review in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    @if (!string.IsNullOrEmpty(review.ImagePath))
                                    {
                                        <img src="@review.ImagePath" 
                                             class="card-img-top" 
                                             style="height: 200px; object-fit: cover;" 
                                             alt="@review.PlaceName">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 200px;">
                                            <span class="text-muted">No Image</span>
                                        </div>
                                    }
                                    
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title">@review.PlaceName</h5>
                                            <span class="badge bg-primary">@review.PlaceType</span>
                                        </div>
                                        
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            <i class="fas fa-map-marker-alt"></i> @review.Location
                                        </h6>
                                        
                                        <p class="card-text flex-grow-1">
                                            @review.Description.Substring(0, Math.Min(100, review.Description.Length))...
                                        </p>
                                        
                                        <div class="mt-auto">
                                            <div class="mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <span class="text-warning">@(i <= review.Rating ? "★" : "☆")</span>
                                                }
                                                <span class="text-muted ms-1">(@review.Rating/5)</span>
                                            </div>
                                            
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    By @review.Author.Split('@')[0]
                                                </small>
                                                <a href="@Url.Action("Details", "Review", new { id = review.Id })" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    Read More
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="text-muted mb-3">
                            <i class="fas fa-search fa-3x"></i>
                        </div>
                        <h4>No reviews found</h4>
                        <p class="text-muted">Try adjusting your search criteria or browse all reviews.</p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            Browse All Reviews
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    .badge {
        font-size: 0.7em;
    }
</style>
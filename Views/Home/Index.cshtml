<!-- Call to Action -->
@if (!string.IsNullOrEmpty(Context.Session.GetString("UserEmail")))
{
    <div class="text-center mt-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4>Share Your Travel Story</h4>
                <p class="mb-3">Have an amazing travel experience to share? Add your review with photos and videos!</p>
                <a href="@Url.Action("Add", "Review")" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Add New Review
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center mt-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4>Join Our Travel Community</h4>
                <p class="mb-3">Sign up to share your travel experiences and discover new places!</p>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-user-plus"></i> Sign Up
                </a>
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
            </div>
        </div>
    </div>
}
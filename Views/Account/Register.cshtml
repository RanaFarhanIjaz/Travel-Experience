@model TravelShare.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="text-center mb-0">Create Your Account</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        @if (ViewData.ModelState["Email"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger small">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</span>
                        }
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" required />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-lg">Create Account</button>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-0">Already have an account? 
                        <a href="@Url.Action("Login")" class="text-decoration-none">Sign in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}